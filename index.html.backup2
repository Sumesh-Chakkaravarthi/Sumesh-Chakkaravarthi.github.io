    <script>
        // Smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });

        // Nav scroll effect
        window.addEventListener('scroll', () => {
            const nav = document.querySelector('nav');
            if (window.scrollY > 100) {
                nav.classList.add('scrolled');
            } else {
                nav.classList.remove('scrolled');
            }
        });

        // Create floating particles
        function createParticles() {
            const container = document.querySelector('.particles');
            const particleCount = 25;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 25 + 's';
                particle.style.animationDuration = (20 + Math.random() * 10) + 's';
                container.appendChild(particle);
            }
        }

        createParticles();

        // Interactive Skills - Project Highlighting
        const skillMapping = {
            'machine learning': ['python,random-forest,scikit-learn,gridsearchcv,machine-learning', 'python,postgresql,langchain,rest-apis'],
            'data science': ['python,arima,tableau,pandas,time-series', 'r,ggplot2,hypothesis-testing,regression'],
            'time series': ['python,arima,tableau,pandas,time-series'],
            'visualization': ['python,arima,tableau,pandas,time-series', 'r,ggplot2,hypothesis-testing,regression'],
            'ar/vr': ['unity,unreal-engine,python,ar-vr,voice-assistant'],
            'cloud': ['python,postgresql,langchain,rest-apis'],
            'python': ['python,random-forest,scikit-learn,gridsearchcv,machine-learning', 'python,arima,tableau,pandas,time-series', 'python,postgresql,langchain,rest-apis'],
            'r': ['r,ggplot2,hypothesis-testing,regression']
        };

        const skillCards = document.querySelectorAll('#skills .skill-card');
        const projectCards = document.querySelectorAll('.project-card');
        let activeSkill = null;

        skillCards.forEach(card => {
            card.addEventListener('click', function () {
                const skillText = this.querySelector('h3').textContent.toLowerCase();

                // Remove active from all skill cards
                skillCards.forEach(c => c.classList.remove('active'));

                // Check if clicking same skill to toggle off
                if (activeSkill === skillText) {
                    activeSkill = null;
                    projectCards.forEach(p => {
                        p.classList.remove('highlighted', 'dimmed');
                    });
                    return;
                }

                // Set new active skill
                activeSkill = skillText;
                this.classList.add('active');

                // Find matching projects
                let matchedProjects = new Set();
                Object.keys(skillMapping).forEach(key => {
                    if (skillText.includes(key)) {
                        skillMapping[key].forEach(proj => matchedProjects.add(proj));
                    }
                });

                // Highlight/dim projects
                projectCards.forEach(proj => {
                    const projSkills = proj.getAttribute('data-skills');
                    if (matchedProjects.has(projSkills) || matchedProjects.size === 0) {
                        proj.classList.add('highlighted');
                        proj.classList.remove('dimmed');
                    } else {
                        proj.classList.remove('highlighted');
                        proj.classList.add('dimmed');
                    }
                });

                // Scroll to projects
                document.getElementById('projects').scrollIntoView({ behavior: 'smooth' });
            });
        });

        // Clear highlights when clicking elsewhere
        document.addEventListener('click', (e) => {
            if (!e.target.closest('.skill-card') && !e.target.closest('.project-card')) {
                skillCards.forEach(c => c.classList.remove('active'));
                projectCards.forEach(p => p.classList.remove('highlighted', 'dimmed'));
                activeSkill = null;
            }
        });
    </script>
